using System;
using System.Collections.Generic;

namespace MyApp
{
/*
Write a C# Sharp program that takes three letters as input and display them in reverse order.
Test Data:
Enter letter: a
Enter letter: b
Enter letter: c
Expected Output:c b a
*/
   class Program
    {
        static void Main(string[] args)
        {
        var letters = new string[3]; 
        for (int i=0; i<3; i++)
            {
                Console.WriteLine("Enter letter: ");
                letters[i] = Console.ReadLine();
            }
        Console.Write( "Output: ");
        for (int i = 2; i >= 0; i--) //each ( var value in letters)
           {
                Console.Write( letters[i] + " " );  
           }
        Console.WriteLine ("");

        }
    }
}
